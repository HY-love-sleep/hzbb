<configuration>

    <!-- 控制台日志 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 文件日志 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>

        <!-- 日志滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 每天滚动日志文件 -->
            <fileNamePattern>logs/archived/app-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- 单个文件大小上限 -->
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- 保留30天的历史记录 -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>
    <!-- Packet Base64 Log Appender -->
    <appender name="PACKET_BASE64_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/packet_base64.log</file>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>
    <!-- Packet Base64 Logger -->
    <logger name="PACKET_LOGGER_BASE64" level="INFO">
        <appender-ref ref="PACKET_BASE64_FILE"/>
    </logger>

    <appender name="PACKET_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/packet.log</file>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="PACKET_LOGGER" level="INFO">
        <appender-ref ref="PACKET_FILE"/>
    </logger>


    <!-- 不同级别的日志配置 -->
    <root level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

    <!-- 对于某个特定包或类设置不同的日志级别 -->
    <logger name="com.hy.service" level="debug"/>

</configuration>
